{
  "workDir": ".",
  "dependencies": [
    {
      "name": "composer",
      "src": "https://github.com/webcardinal/cardinal-composer",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/cardinal",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "npm install ./dev/cardinal/composer -D"
        }
      ]
    },
    {
      "name": "components/core",
      "src": "https://github.com/webcardinal/cardinal-core",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/cardinal",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./dev/cardinal/components/core && npm install"
        }
      ]
    },
    {
      "name": "components/forms",
      "src": "https://github.com/webcardinal/cardinal-forms",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/cardinal",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./dev/cardinal/components/forms && npm install"
        }
      ]
    },
    {
      "name": "themes/clear-sky-theme",
      "src": "https://github.com/PrivateSky/clear-sky-theme.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/cardinal",
          "collectLog": false
        }
      ]
    }
  ]
}
